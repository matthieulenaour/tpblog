{% extends 'ImieBlogBundle:layout.html.twig' %}

{% block body %}
    <h1>Liste des Articles </h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Contenu</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{% if article.date %}{{ article.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td><a href="{{ path('imie_article_voir', { 'id': article.id }) }}">{{ article.titre }}</a></td>
                <td>{{ article.auteur }}</td>
                <td>{{ article.contenu }}</td>
                <td><img src="{{ article.image }}"/></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('imie_article_ajout') }}">Ecrire un nouvel article</a>
        </li>
    </ul>

    <h2> Pages </h2>
    <div class="pagination">
    <ul>
      {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
      {% for p in range(1, nombrePage) %}
        <li{% if p == page %} class="active"{% endif %}>
          <a href="{{ path('imie_article_afficher', {'page': p}) }}">{{ p }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>


{% endblock %}
